<%- include('includes/header') -%>
<body class="signup-bg">
    <section id="signup">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <% if(success) { %>
                        <% if(success.length != 0) { %>
                            <div class="alert alert-success alert-dismissible fade-in" role="alert">
                                <button class="close" type="button" data-dismiss="alert" aria-label="close">
                                    <span aria-hidden="true">Ã—</span>
                                </button>
                                <span><%= success %></span>
                            </div>  
                        <% } %> 
                    <% } %>
                    <form method="POST" class="form-horizontal">
                        <h3 class="text-center">Reset Password</h3>
                        <hr />
                        <%if (locals.error) { %>
                            <p class="text-center err"><%= error %></p>
                        <% } %>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label for="firstName" class="label">Password :</label>
                                <input type="password" class="form-control map-form" name="newPassword" id="email" />
                            </div>
                            <div class="col-md-12 mb-3">
                                <label for="lastName" class="label">Confirm Password :</label>
                                <input type="password" class="form-control map-form" name="repeatPassword" id="password" />
                            </div>
                            <div class="col-md-12 text-center">
                                <input type="submit" class="main-btn map-form" id="submit" value="Login">
                                <hr />
                            </div>
                        </div>
                    </form>
                    
                </div>
            </div>

            <div class="text-center">
                <hr/ >
            </div>
        </div>
    </section>

          
    <%- include('includes/footer') -%>
</body>
</html>
                