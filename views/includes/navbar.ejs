<div class="navbar-head">
    <div class="container-fluid">
        <div class="logo float-left">
            <a href="/" class="logo"><i class="fa fa-quora"></i>uest-Land</a> 
        </div>
        <nav class="menu-cust float-right">
            <ul>
                <li class="dropdown">
                    <a href="#" id="dropdown02" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa fa-bars"></i>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdown02">
                        <a class="dropdown-item" href="/">
                            <i class="fa fa-tachometer mr-1"></i> 
                            Dashboard
                        </a> 
                        <a class="dropdown-item" href="/my-questions">
                            <i class="fa fa-newspaper-o mr-1"></i> 
                            My Questions
                        </a> 
                    </div>     
                </li>
                <li class="dropdown">
                    <a href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <% if (locals.user.profilePhoto) { %>
                            <% let imageUrl = "/profile/" + user.profilePhoto %>
                            <img alt="Picture" src="<%= imageUrl %>" class="rounded-circle" width="25" height="25" />
                        <% }else{ %>
                            <% if (locals.user.gender === 'Male') { %>
                                <img alt="Picture" src="/profile/default-avatar.png" class="rounded-circle" width="25" height="25" />
                            <% }else{ %>
                                <img alt="Picture" src="/profile/female-avatar.png" class="rounded-circle" width="25" height="25" />
                            <% } %>
                        <% } %>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdown01">
                        <a class="dropdown-item" href="/profile">
                            <i class="fa fa-user mr-1"></i> 
                            Profile
                        </a> 
                        <a class="dropdown-item" href="#">
                            <i class="fa fa-bell mr-1"></i> 
                            Notifications
                        </a> 
                        <a class="dropdown-item" href="/settings">
                            <i class="fa fa-gear mr-1"></i> 
                            Settings
                        </a> 
                        <a class="dropdown-item" href="/logout">
                            <i class="fa fa-sign-out mr-1"></i> 
                            Logout
                        </a> 
                    </div>
                            
                </li>
            </ul>
        </nav>
        <div class="clearfix"></div>
    </div>
</div>

