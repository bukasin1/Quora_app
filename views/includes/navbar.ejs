    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <% let profileUrl = "/profile/" + user._id %>
                <h3>Hello <b class="a"><a href="<%= profileUrl%>" class="a"><%= user.username %></a></b>, welcome to <span class="logo"><a href="/" class="logo1"><i class="fa fa-quora"></i>uest-Land</a></span></h3>
                <span><a href="/create-question" class="green-btn">Create a question</a></span>
            </div>
        </div>

    </div>
